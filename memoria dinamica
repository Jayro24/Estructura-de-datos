class MemoriaDinamica:
    def __init__(self):
        self.memoria = []

    def agregar(self, dato):
        self.memoria.append(dato)
        print(f"Dato agregado: {dato}")

    def eliminar(self, indice):
        if 0 <= indice < len(self.memoria):
            eliminado = self.memoria.pop(indice)
            print(f"Dato eliminado: {eliminado}")
        else:
            print("Índice fuera de rango")

    def mostrar(self):
        print("Contenido de la memoria:")
        for i, dato in enumerate(self.memoria):
            print(f"[{i}] => {dato}")

# Ejemplo de uso
memoria = MemoriaDinamica()
memoria.agregar("Hola")
memoria.agregar(42)
memoria.agregar([1, 2, 3])
memoria.mostrar()
memoria.eliminar(1)
memoria.mostrar()
